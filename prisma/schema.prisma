generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  tools
  books
  projects
}

enum CollaboratorRole {
  ecommerce_expert
  supplier
  influencer
  developer
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String   @db.VarChar(100)
  password  String
  AccessToken String?
  RefreshToken String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Item {
  id        String   @id @default(cuid())
  name      String @db.VarChar(100)
  image     String
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  price    Float
  stock    Int
  type     Category
  tool     Tools[]
  book    Books[]
  final_project Projects[]
}

model Tools {
  id        String   @id @default(cuid())
  barang_id String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  barang Item @relation(fields: [barang_id], references: [id])
}
model Books {
  id        String   @id @default(cuid())
  writer    String 
  year      Int
  barang_id String
  barang Item @relation(fields: [barang_id], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Projects {
  id  String @id @default(cuid())
  barang_id String
  barang Item @relation(fields: [barang_id], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Collaborator {
  id       String   @id @default(cuid())
  name     String   @db.VarChar(100)
  email    String   @unique
  role      CollaboratorRole
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}